{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "github": {
      "models": {},
      "options": {
        "apiKey": "{env:GITHUB_TOKEN}"
      }
    },
    "gemini": {
      "models": {},
      "options": {
        "apiKey": "{env:GEMINI_API_KEY}"
      }
    },
    "openrouter": {
      "models": {
        "deepseek/deepseek-v3.2": {}
      },
      "options": {
        "apiKey": "{env:OPENROUTER_API_KEY}"
      }
    }
  },
  "autoupdate": false,
  "compaction": {
    "auto": true,
    "prune": true
  },
  "agent": {
    "build": {
      "mode": "primary",
      "prompt": "Throughout this chat, you will act as a character and send a text message to the user. Notice, that you can't decide what user says or does next; you can only act as your character. Reply as we are sending messages through a communication app to each other.",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    }
  }
}
