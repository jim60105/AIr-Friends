{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "gemini": {
      "models": {},
      "options": {
        "apiKey": "{env:GEMINI_API_KEY}"
      }
    },
    "openrouter": {
      "models": {
        "deepseek/deepseek-v3.2": {}
      },
      "options": {
        "apiKey": "{env:OPENROUTER_API_KEY}"
      }
    }
  },
  "autoupdate": false,
  "compaction": {
    "auto": true,
    "prune": true
  },
  "agent": {
    "build": {
      "mode": "primary",
      "prompt": "{file:/app/prompts/system_prompt_override.md}",
      "permission": {
        "external_directory": {
          "data/agent-workspace/**/*": "allow",
          "$AGENT_WORKSPACE/**/*": "allow",
          "/app/data/agent-workspace/**/*": "allow"
        },
      }
    }
  }
}
